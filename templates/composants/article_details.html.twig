{% extends 'base.html.twig' %}

{% block title %}Detail{% endblock %}

{% block body %}
<style>
div {
    font-family: Arial, Helvetica, sans-serif;
    font-size: x-large;
}
.titre-detail {
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    font-size: 50px;
}
img {
    width: 300px;
    border-radius: 25px;
}
p {
    max-width: 400px;
}
.container {
    display: flex;
    justify-content: center;
    gap: 100px;
}
.cate-container {
    display: flex;
    gap: 20px;
}
.categorie {
    background-color: coral;
    padding: 15px;
    border-radius: 25px;
}
</style>
<h1 class="titre-detail">{{ article.titre }}</h1>
<div class="container">
    <div class="content-img">
        <img src={{ article.imageUrl }}>
        <p>{{ article.dateCreation|date('Y-m-d') }}</p>
    </div>
    <div>
        <p>{{ article.contenu }}</p>
        <h2>{{ article.utilisateur.nom}} {{article.utilisateur.prenom}}</h2>
        <div class="cate-container">
            {% for categorie in article.categories %}
                <p class="categorie">{{categorie.nom}}</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
